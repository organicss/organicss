{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "declaration": true,
        "declarationDir": "dist",
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": false,
        "outDir": "dist",
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "target": "es6"
    },
    "include": ["src"]
}
