{
    "name": "organicss",
    "version": "0.0.0",
    "private": true,
    "description": "OrganiCSS is a collection of mixins for writing logical CSS in different pre-processors and libraries.",
    "main": "index.js",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "lint": "eslint",
        "lint:fix": "yarn lint -- --fix",
        "prettier": "prettier ./ --check",
        "prettier:fix": "yarn prettier -- --write",
        "format": "yarn prettier:fix && yarn lint:fix"
    },
    "author": "Daniel Yuschick <daniel.yuschick@gmail.com>",
    "license": "UNLICENSED",
    "keywords": [
        "organicss",
        "css",
        "logical",
        "mixins",
        "styled components",
        "scss",
        "sass",
        "less",
        "stylus"
    ],
    "devDependencies": {
        "@commitlint/cli": "^17.0.3",
        "@commitlint/config-conventional": "^17.0.3",
        "eslint": "^8.19.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.1",
        "prettier": "^2.7.1",
        "prettier-eslint": "^15.0.1",
        "prettier-eslint-cli": "^6.0.1"
    },
    "dependencies": {},
    "husky": {
        "hooks": {
            "pre-commit": "npm run format"
        }
    }
}
